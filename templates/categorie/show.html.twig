{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ categorie.categorie }}</td>
            </tr>
            <tr>
                <th>Abrege</th>
                <td>{{ categorie.abrege }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ categorie.code }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ categorie.createdAt ? categorie.createdAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ categorie.updatedAt ? categorie.updatedAt|date('d/m/Y') : '' }}</td>
