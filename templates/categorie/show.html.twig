    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" data-toggle="modal" data-target="#modal-edit" class="fas btn btn-xs btn-default rounded edition"><i class="fas fa-edit text-warning"></i></a>

    {{ include('categorie/_delete_form.html.twig') }}
