{% extends 'base.html.twig' %}

{% block title %}TeamMember{% endblock %}

{% block body %}
    <h1>TeamMember</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team_member.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ team_member.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ team_member.prenom }}</td>
            </tr>
            <tr>
                <th>Fonction</th>
                <td>{{ team_member.fonction }}</td>
            </tr>
            <tr>
                <th>Profession</th>
                <td>{{ team_member.profession }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ team_member.photo }}</td>
            </tr>
            <tr>
                <th>IsActif</th>
                <td>{{ team_member.isActif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Twitter</th>
                <td>{{ team_member.twitter }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ team_member.facebook }}</td>
            </tr>
            <tr>
                <th>Linkdin</th>
                <td>{{ team_member.linkdin }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ team_member.createdAt ? team_member.createdAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ team_member.updatedAt ? team_member.updatedAt|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('team_member_index') }}">back to list</a>

    <a href="{{ path('team_member_edit', {'id': team_member.id}) }}" data-toggle="modal" data-target="#modal-edit" class="fas btn btn-xs btn-default rounded edition"><i class="fas fa-edit text-warning"></i></a>

    {{ include('team_member/_delete_form.html.twig') }}
{% endblock %}
