{% extends 'base.html.twig' %}

{% block title %}Reponse{% endblock %}

{% block body %}
    <h1>Reponse</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reponse.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ reponse.titre }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ reponse.detail }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ reponse.photo }}</td>
            </tr>
            <tr>
                <th>IsActif</th>
                <td>{{ reponse.isActif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ reponse.createdAt ? reponse.createdAt|date('d/m/Y') : '' }}</td>
