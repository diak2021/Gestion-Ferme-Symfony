{% extends 'base.html.twig' %}
{% block title %}tableau de bord{% endblock %}

{% block other_links %}
    <style>
        .info-box-icon{
            border-radius: 0!important;
        }
        .info-box{
            padding: 0;
        }
    </style>
{% endblock %}

{% block body %}

    <!-- Main content -->
    <div class="row">
        <div class="col-sm-8">
            <h2 class="text-center my-3"> Statistiques</h2>
            <div class="row">
                <div class="col-sm-6">
                    <div class="callout callout-success">
                        <h5>{{ stats_alveole_du_jour.quantiteTotale | number_format(0, ' ', ' ') }}</h5>

                        <p>Alvéoles Produites du Jour</p>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="callout callout-success">
                        <h5> {{ stats_alveole_du_jour.montantTotal | number_format(0, ' ', ' ') }} GNF</h5>

                        <p>Montant de Production du Jour</p>
                    </div>
                </div>

                <div class="col-sm-6">
                    <!-- small box -->
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h4>{{ stats_alveole_semaine.quantiteTotale | number_format(0, ' ', ' ') }}</h4>
                            <p>Production Hebdomadaire</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-egg"></i>
                        </div>

                    </div>
                </div>

                <div class="col-sm-6">
                    <!-- small box -->
                    <div class="small-box bg-gradient-fuchsia">
                        <div class="inner">
                            <h4>{{ stats_alveole_semaine.montantTotal | number_format(0, ' ', ' ') }} GNF</h4>
                            <p>Montant de Production Hebdomadaire</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-money-bill-wave text-xl"></i>
{#                            <span class="fas fa-money-bill"></span>#}
                        </div>

                    </div>
                </div>

                <div class="col-sm-6">
                    <!-- small box -->
                    <div class="small-box bg-gradient-olive">
                        <div class="inner">
                            <h4>{{ stats_alveole_du_mois.quantiteTotale | number_format(0, ' ', ' ') }}</h4>

                            <p>Production Mensuelle</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-egg"></i>
                        </div>

                    </div>
                </div>

                <div class="col-sm-6">
                    <!-- small box -->
                    <div class="small-box bg-gradient-pink">
                        <div class="inner">
                            <h4>{{ stats_alveole_du_mois.montantTotal | number_format(0, ' ', ' ') }} GNF</h4>

                            <p>Montant de Production Mensuelle</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-money-bill-wave text-xl"></i>
                        </div>

                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="info-box mb-3">
                        <span class="info-box-icon bg-success elevation-1 m-0 border-right"><i class="fas fa-egg"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text text-lg mb-1 text-capitalize">Quantité total des productions</span>
                            <span class="info-box-number text-lg">
                                {{ stats_alveole_cumul_total.quantiteTotale | number_format(0, ' ', ' ') }}
                            </span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>

                <div class="col-sm-6">
                    <div class="info-box mb-3">
                        <span class="info-box-icon bg-success elevation-1 m-0 border-right"><i class="fas fa-money-bill-wave"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text text-lg mb-1 text-capitalize">Montant total des productions</span>
                            <span class="info-box-number text-lg">
                                {{ stats_alveole_cumul_total.montantTotal | number_format(0, ' ', ' ') }} GNF
                            </span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>

            </div>
        </div>
        <div class="col-sm-4">
            <h2 class="text-center my-3">
                <iframe name="date du jour" id="date-du-jour" style="width:105px;height:75px;" src="https://www.mathieuweb.fr/calendrier/date-jour-rouge.html" scrolling="no" frameborder="0" allowtransparency="true"></iframe>
            </h2>

            <div class="row">
                <div class="col-sm-12">
                    <div class="card card-outline card-danger">
                        <div class="card-header">
                            <h3 class="card-title"> <i class="fas fa-plus-circle"></i> Nouvelle Production d'alvéoles</h3>
                        </div>

                        <div class="card-body">
                            <form action="{{ path('production_new') }}" method="post">
                                {{ form_start(form) }}
                                {{ form_row(form.date) }}
                                {{ form_row(form.prixUnitaire, { 'attr' : { 'class' : '', 'value' : prixOeufDefaut } }) }}
                                {{ form_row(form.quantite) }}
                                {{ form_row(form.observation) }}
                                <button class="btn btn-xs btn-outline-danger float-right">
                                    <i class="fas fa-save"></i> Enregistrer
                                </button>
                                {{ form_end(form) }}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content -->

    {#    <a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">#}
    {#        <i class="fas fa-chevron-up"></i>#}
    {#    </a>#}
{% endblock %}