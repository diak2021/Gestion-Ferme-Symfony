{% extends 'base.html.twig' %}

{% block title %}Slide{% endblock %}

{% block body %}
    <h1>Slide</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ slide.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ slide.titre }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ slide.detail }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ slide.photo }}</td>
            </tr>
            <tr>
                <th>IsActif</th>
                <td>{{ slide.isActif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsDescriptionEnabled</th>
                <td>{{ slide.isDescriptionEnabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ slide.createdAt ? slide.createdAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ slide.updatedAt ? slide.updatedAt|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('slide_index') }}">back to list</a>

    <a href="{{ path('slide_edit', {'id': slide.id}) }}" data-toggle="modal" data-target="#modal-edit" class="fas btn btn-xs btn-default rounded edition"><i class="fas fa-edit text-warning"></i></a>

    {{ include('slide/_delete_form.html.twig') }}
{% endblock %}
