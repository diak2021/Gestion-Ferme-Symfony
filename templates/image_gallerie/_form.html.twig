<form action="{{ path('image_gallerie_edit', {'id': image_gallerie.id }) }}" method="post" enctype="multipart/form-data">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-sm-12">{{ form_row(form.titre) }}</div>
        <div class="col-sm-12">{{ form_row(form.photo) }}</div>
        <div class="col-sm-12">{{ form_row(form.detail) }}</div>
    </div>
    <button type="submit" class="btn btn-sm btn-default float-right">
        <i class="fas fa-save"></i> Appliquer
    </button>
    {{ form_end(form) }}
</form>
