{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ question.titre }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ question.detail }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ question.photo }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ question.createdAt ? question.createdAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ question.updatedAt ? question.updatedAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>IsActif</th>
                <td>{{ question.isActif ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('question_index') }}">back to list</a>

    <a href="{{ path('question_edit', {'id': question.id}) }}" data-toggle="modal" data-target="#modal-edit" class="fas btn btn-xs btn-default rounded edition"><i class="fas fa-edit text-warning"></i></a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
