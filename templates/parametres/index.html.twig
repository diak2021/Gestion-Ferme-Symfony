{% extends 'base.html.twig' %}
{% block title %}Parametres{% endblock %}
{% block card_title %}<i class="fas fa-cogs text-sm"></i> Paramètrage en cours{% endblock %}
{% block other_links %}
    <style>
        @media screen and (min-width: 780px){
            .mobile{
                display: none;
            }
        }
        @media screen and (max-width: 780px){
            .desktop{
                display: none;
            }
        }
    </style>
{% endblock %}

{% block body %}

    <div class="">
        <div class="card card-default card-outline shadow-none border">
            <div class="card-header">
                <h4 class="card-title"><i class="fas fa-cog text-sm"></i> Informations de base</h4>
                <div class="card-tools">
                    {% if parametre %}
                        <a href="{{ path('parametres_edit', {'id': parametre.id}) }}" class="btn btn-sm btn-default rounded">
                            <span class="far fa-edit"></span> Modifier les paramètres
                        </a>
                    {% else %}
                        <a href="{{ path('parametres_new') }}" class="btn btn-sm btn-default rounded">
                            <span class="far fa-plus-circle"></span> Nouveau
                        </a>
                    {% endif %}

                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                            <tr>
                                <td>Désignation de la structure</td> <th class="text-muted">{{ parametre.libelleStructure ?? "Non définie" }}</th>
                                <td rowspan="6" style="width: 30%; padding: 15px; text-align: center" class="desktop">

                                    <div class="text-bold text-muted text-md text-left mb-1 ml-4 text-center mr-sm-4 mb-2">Logo</div>
                                    <div class="text-center">
                                        <img src="{{ asset(parametre.logo ?? "") }}" alt="" width="90" class="img-fluid">
                                    </div>

                                    <div class="text-bold text-muted text-sm text-left mb-1 ml-4 mt-5 mb-2 text-center mr-sm-3">Icône du navigateur</div>
                                    <div class="text-center">
                                        <img src="{{ asset(parametre.favicon ??"") }}" alt="" width="40" class="img-fluid text-center">
                                    </div>

                                </td>
                            </tr>
                            <tr>
                                <td>Phrase d'accroche</td> <th class="text-muted">{{ parametre.slogan ?? "Non défini" }}</th>
                            </tr>
                            <tr>
                                <td>N° téléphone Principal</td> <th class="text-muted">{{ parametre.telephone ?? "Non défini" }}</th>
                            </tr>
                            <tr>
                                <td>Adresse Email Principale</td> <th class="text-muted">{{ parametre.email ?? "Non définie"}}</th>
                            </tr>
                            <tr>
                                <td>Plage d'ouverture</td> <th class="text-muted">{{ parametre.plageOuvertureDesLocaux ?? "Non définie"}}</th>
                            </tr>
                            <tr>
                                <td>Couleur principale du site</td> <th class="text-muted">{{ parametre.couleurPrincipale ?? "Non définie"}}</th>
                            </tr>
                            <tr class="mobile text-center">
                                <td>Logo</td> <th class="text-muted"><img src="{{ asset(parametre.logo ?? '') }}" alt="" width="100" class="img-fluid"></th>
                            </tr>
                            <tr class="mobile text-center">
                                <td>Icône du navigateur</td> <th class="text-muted"><img src="{{ asset(parametre.favicon ?? '') }}" alt="" width="50" class="img-fluid"></th>
                            </tr>

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

        <div class="card card-default card-outline shadow-none border collapsed-card">
